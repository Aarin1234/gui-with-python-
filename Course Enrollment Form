import tkinter as tk
from tkinter import ttk
#creating the game window
root = tk.Tk()
root.geometry('375x375')
root.configure(bg="#DBDBDB")
root.title('Student Registration')


#Label⬇️
select_course_label = tk.Label(root, text= 'select your course',background='#DBDBDB', font=('Arial', 20))

enrollment_label = tk.Label(root, text="", bg="#DBDBDB", fg="black", font=("Arial", 12, "bold"))


#Button⬇️
def enroll():
    student_course = combo.get()
    student_batch = radio_var.get()
    enrollment_label.config(text="You have enrolled for " + student_course + " " + student_batch + "!")

enroll_button = tk.Button(root, text='Enroll Now', bg='green', fg='white', font=('Arial', 16, 'bold'), command=enroll)


#Combo Box⬇️
combo = ttk.Combobox(root, width=23, state='readonly', values=('Python', 'Game Development','Web Design'))


#Radiobutton⬇️
radio_var = tk.StringVar()
option1 = 'Morning Batch'
option2 = 'Afternoon Batch'
option3 = 'Evening Batch'

def on_radio_select():
    print(radio_var.get())

radio_btn1 = ttk.Radiobutton(root, text=option1, variable=radio_var, value=option1, command= on_radio_select)
radio_btn2 = ttk.Radiobutton(root, text=option2, variable=radio_var, value=option2, command= on_radio_select)
radio_btn3 = ttk.Radiobutton(root, text=option3, variable=radio_var, value=option3, command= on_radio_select)
radio_var.set(radio_btn1)


#Placing⬇️
select_course_label.place(x=65, y=45)
combo.place(x=101, y=108)
radio_btn1.place(x=256,y=140)
radio_btn2.place(x=256,y=170)
radio_btn3.place(x=256,y=200)
enroll_button.place(x=115, y=158)
enrollment_label.place(x=16, y=258)

root.mainloop()

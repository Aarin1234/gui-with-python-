from tkinter import*
win = Tk()
win.title("menubar")
win.geometry("500x500")
menubar = Menu(win)

#Adding a menu for the files
file = Menu(menubar)
menubar.add_cascade(label = "File", menu = file)
file.add_cascade(label = "New file", command = None)
file.add_cascade(label = "Open file", command = None)
file.add_cascade(label = "Save", command = None)
file.add_separator()
file.add_cascade(label = "Exit", command = win.destroy)

#Adding a edit menu
#List of the things 1.Edit 2.Cut 3.Copy 4.Paste 5.Select 6. Select All find
edit = Menu(menubar, tearoff = 1)
menubar.add_cascade(label = "Edit", menu = edit)
edit.add_cascade(label = "Cut", command = None)
edit.add_cascade(label="Copy", command=None)
edit.add_cascade(label="Paste", command=None)
edit.add_cascade(label="Select", command=None)
edit.add_cascade(label="Select All", command=None)
edit.add_cascade(label="Find", command=None)


#Adding a help menu
#List of the things to add 1.help 2.TK-help 3.Demo 4.About-TK
help = Menu(menubar, tearoff = 1)
menubar.add_cascade(label = "Help", menu = help)
help.add_cascade(label="Help", command=None)
help.add_cascade(label="TK-help", command=None)
help.add_cascade(label="Demo", command=None)
help.add_cascade(label="About-TK", command=None)


win.config(menu = menubar) 
win.mainloop()
